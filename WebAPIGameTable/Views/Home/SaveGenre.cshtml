@model WebAPIGameTable.Models.Genre


<h2>Save</h2>
@using (Html.BeginForm(Model == null ? "genres" : "genres/" + Model.GenreId, "api", FormMethod.Post, new { id = "popupForm" }))
{
    if (Model != null && Model.GenreId > 0)
    {
        @Html.HiddenFor(a => a.GenreId)
    }

    <div class="form-group">
        <label>Genre Name</label>
        @Html.TextBoxFor(a => a.GenreName, new { @class = "form-control" })
        @Html.ValidationMessageFor(a => a.GenreName)
    </div>
    <div class="form-group">
        <label>Description</label>
        @Html.TextBoxFor(a => a.Description, new { @class = "form-control" })
        @Html.ValidationMessageFor(a => a.Description)
    </div>
    <div>
        <input type="submit" value="Save" />
    </div>
}
