@model WebAPIGameTable.Models.Genre

<h2>Delete Game</h2>
@using (Html.BeginForm("genres/" + Model.GenreId, "api", FormMethod.Post, new { id = "popupForm" }))
{
    @Html.HiddenFor(a => a.GenreId)

    <div class="form-group">
        <label>Genre Name</label>
        <p>@Model.GenreName</p>
    </div>

    <div class="form-group">
        <label>Description</label>
        <p>@Model.Description</p>
    </div>

    <div>
        <input type="submit" value="Delete" />
    </div>
}

