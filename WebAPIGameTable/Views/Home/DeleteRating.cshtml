@model WebAPIGameTable.Models.Rating

<h2>Delete Rating</h2>
@using (Html.BeginForm("ratings/" + Model.RatingId, "api", FormMethod.Post, new { id = "popupForm" }))
{
    @Html.HiddenFor(a => a.RatingId)

    <div class="form-group">
        <label>Rating Value</label>
        <p>@Model.RatingValue</p>
    </div>

    <div class="form-group">
        <label>Description</label>
        <p>@Model.Description</p>
    </div>

    <div>
        <input type="submit" value="Delete" />
    </div>
}



